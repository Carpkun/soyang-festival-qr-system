# PythonAnywhere 환경변수 설정 샘플
# 이 파일을 .env로 복사하고 실제 값으로 변경하세요

# Django 보안 설정
DJANGO_SECRET_KEY=your-strong-secret-key-here
DEBUG=False

# MySQL 데이터베이스 설정 (PythonAnywhere)
